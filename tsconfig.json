{
  "compilerOptions": {
    "pretty": true,
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "lib": ["es6","es7","dom"],
    "baseUrl": ".",
    "paths": {
      "*": [ "packages/*" ]
    }
  },
  "include": [
    "./packages/**/*",
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
